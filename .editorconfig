# EditorConfig: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# 2 space indentation for YAML
[*.yml]
indent_style = space
indent_size = 2

[Vagrantfile]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[db.*]
indent_style = space
indent_size = 4
