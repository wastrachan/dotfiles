# {{ ansible_managed }}


# Dev folder selection. Will use $DEV_FOLDER as the base if it is set in the environment.
DEV=${DEV_FOLDER:-"$HOME/Development"}
dev() {

    # Work Projects
    if [[ "$1" == bu* ]]; then
        cd $DEV/Phobio/buzzsaw/
    elif [[ "$1" == che* ]]; then
        cd $DEV/Phobio/buzzsaw-chef/
    elif [[ "$1" == ans* ]]; then
        cd $DEV/Phobio/buzzsaw-ansible/
    elif [[ "$1" == ter* ]]; then
        cd $DEV/Phobio/buzzsaw-terraform/

    # Personal Projects
    elif [[ "$1" == dot* ]]; then
        cd $DEV/Other/dotfiles

    # General Folders
    elif [[ "$1" == p* ]]; then
        cd $DEV/Phobio/
    elif [ "$1" = "o" ]; then
        cd $DEV/Other/
    elif [[ "$1" == g* ]]; then
        cd $DEV/GamersOutreach/
    else
        cd $DEV
    fi
}


# Edit with Atom
a() {
    # Open CWD
    if [[ -z "$1" ]]; then
        atom .
    # Open file/folder
    else
        atom $1
    fi
}
