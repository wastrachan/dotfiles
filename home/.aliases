scrb() {
    # Work on Buzzsaw
    screen -dmS buzzsaw -t buzzsaw
    screen -S buzzsaw -X screen -t runserver
    screen -S buzzsaw -X screen -t rq-worker

    screen -S buzzsaw -p buzzsaw -X stuff "`printf "workon buzzsaw\r"`"
    screen -S buzzsaw -p runserver -X stuff "`printf "workon buzzsaw\r python manage.py runserver 8000 --settings=buzzsaw.settings_local\r"`"
    screen -S buzzsaw -p rq-worker -X stuff "`printf "workon buzzsaw\r python manage.py rqworker high default low --settings=buzzsaw.settings_local\r"`"

    screen -dRR buzzsaw -p buzzsaw
}

scrf7() {
    # Work on Black Flag
    screen -dmS blackflag -t blackflag
    screen -S blackflag -X screen -t runserver
    screen -S blackflag -X screen -t rq-worker

    screen -S blackflag -p blackflag -X stuff "`printf "blackflag\r"`"
    screen -S blackflag -p runserver -X stuff "`printf "blackflag\r python manage.py runserver 8000\r"`"
    screen -S blackflag -p rq-worker -X stuff "`printf "blackflag\r python manage.py rqworker high default\r"`"

    screen -dRR blackflag -p blackflag
}

# Import Buzzsaw Database
bimport() {
    echo "Dropping old database..."
    mysql -uroot -e 'DROP DATABASE buzzsaw; CREATE DATABASE buzzsaw;'
    echo "Importing SQL backup..."
    pv -cN "Import Progress" "$1" | gunzip | mysql -uroot buzzsaw
}

