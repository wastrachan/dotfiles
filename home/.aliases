scrb() {
    # Work on Buzzsaw
    screen -dmS buzzsaw -t buzzsaw
    screen -S buzzsaw -X screen -t runserver
    screen -S buzzsaw -X screen -t rq-worker

    screen -S buzzsaw -p buzzsaw -X stuff "`printf "buzzsaw\r"`"
    screen -S buzzsaw -p runserver -X stuff "`printf "buzzsaw\r python manage.py runserver 8000 --settings=buzzsaw.settings_local\r"`"
    screen -S buzzsaw -p rq-worker -X stuff "`printf "buzzsaw\r python manage.py rqworker high default low --settings=buzzsaw.settings_local\r"`"

    screen -dRR buzzsaw -p buzzsaw
}

