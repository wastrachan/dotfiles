### Work related stuff
alias activate='source venv/bin/activate'
alias buzzsaw='cd /Users/rew1red/Development/Phobio/buzzsaw; activate'
alias safetrade='cd /Users/rew1red/Development/Phobio/safetrade;'
alias s='/Applications/Sublime\ Text.app/Contents/SharedSupport/bin/subl'

dev() {
  if [ "$1" = "l" ]; then
    cd /Users/rew1red/Development/LANFest/
  elif [ "$1" = "p" ]; then
    cd /Users/rew1red/Development/Phobio/
  elif [ "$1" = "o" ]; then
    cd /Users/rew1red/Development/Other/
  else
    cd /Users/rew1red/Development/
  fi
}

# PS
alias psx="ps aux"
alias psg="ps aux | grep "

# Show human friendly numbers and colors
alias ls='ls -AFhG'
alias ll='ls -l'
alias du='du -h -d 2'

# Moving around
cd() { builtin cd $@ && ls }

# show me files matching "ls grep"
alias lsg='ll | grep'

